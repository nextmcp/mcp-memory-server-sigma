# OpenMemory Environment Variables

# Database Configuration
# For local development with SQLite:
DATABASE_URL=sqlite:///./openmemory.db
# For production with PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:port/database

# User Configuration
USER=default_user

# OpenAI API Key (optional - needed for mem0ai memory operations)
OPENAI_API_KEY=sk-your-key-here

# Application Configuration
ENVIRONMENT=local
PORT=8000
BIND_PUBLIC_HOST=True
JSON_LOGGING_ENABLED=False
DISABLE_HEALTH_CHECK_ACCESS_LOGS=False

# Datadog (optional)
DD_TRACE_ENABLED=False
DD_ENV=local
DD_VERSION=0.0.0
